border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

box-shadow(l,t,w,c)
  -webkit-box-shadow l t w c
  -moz-box-shadow l t w c
  box-shadow l t w c

body
  padding: 0
  margin: 0
  font: 16px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
  
#nav
  position: fixed
  left: 0
  right: 0
  top: 0
  padding: 1px
  height: 48px
  background-color: #d8e6df
  box-shadow 0px 0px 8px #000
  z-index: 2
  img
    float: left
    margin: 1px
  h1
    float: left
    line-height: 48px
    height: 48px
    font-size: 18px
    padding: 0px 8px
  span.user,a.login
    float: right
    padding: 4px 8px
    line-height: 26px
    margin: 4px
  a.login
    border: 1px solid #999
    border-radius(3px)
    background-color: white
    color: #666;
    img
      width: 24px
      height: 24px
    span
      padding: 0px 0px 0 8px

#cal
  position: absolute
  top: 48px
  left: 0
  right: 0
  width: 100%

  .week
    float: left
    width: 100%
    border-top: 1px solid #999;
    padding-top: 1px;

    .wknbr,.day
       float:left

    .wknbr
      width: 3.4%
      font-size: 18px
      color: #666

    .day
      width: 13.8%

      .title
        width: 100%
        font-size: 12px
        font-weight: bold
        .name
          padding: 1px 3px
          float: left

      .shift
        clear: both
        float: left
        width: 100%
        height: 72px;
        border: 1px solid #FFF
        margin: -1px
      .shift.red
        background-color: LightCoral
      .shift.orange
        background-color: Khaki
      .shift.green
        background-color: LightGreen

      .shift
        .title
          width: auto
          float: left
          font-size: 11px
          background-color: #fff
          padding: 1px 3px
          color: #000
          box-shadow: 1px 1px 1px #333
        .manager
          border-radius(3px)
          border: 1px solid #333
          padding: 1px 3px
          margin: 3px
          float: left
          font-size: 12px

        .manager.available
          background-color: LightGreen
        .manager.not-available
          background-color: LightCoral

        .manager.me
          border: 1px solid #FFF
          box-shadow: 1px 1px 1px #333
          color: white
          font-weight: bold
        .manager.available.me
          background-color: Green
        .manager.not-available.me
          background-color: DarkRed !important

@media screen and (max-width: 480px)
  .wknbr,.day
    width: 100% !important
  .shift
    height: auto !important
  .day
    border-top: 1px dotted #999 !important
  a.login span
    display: none